<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- LoginServlet Declaration -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.servlet.LoginServlet</servlet-class>
    </servlet>
    
    <!-- LoginServlet Mapping -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- AddPostServlet Declaration -->
    <servlet>
        <servlet-name>AddPostServlet</servlet-name>
        <servlet-class>com.servlet.AddPostServlet</servlet-class>
    </servlet>
    
    <!-- AddPostServlet Mapping -->
    <servlet-mapping>
        <servlet-name>AddPostServlet</servlet-name>
        <url-pattern>/add_job</url-pattern>
    </servlet-mapping>

    <!-- UpdateJobServlet Declaration -->
    <servlet>
        <servlet-name>UpdateJobServlet</servlet-name>
        <servlet-class>com.servlet.UpdateJobServlet</servlet-class>
    </servlet>
    <servlet>
    	<description>
    	</description>
    	<display-name>DeleteJobServlet</display-name>
    	<servlet-name>DeleteJobServlet</servlet-name>
    	<servlet-class>com.servlet.DeleteJobServlet</servlet-class>
    </servlet>
    
    <!-- UpdateJobServlet Mapping -->
    <servlet-mapping>
        <servlet-name>UpdateJobServlet</servlet-name>
        <url-pattern>/update_job</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>DeleteJobServlet</servlet-name>
    	<url-pattern>/DeleteJobServlet</url-pattern>
    </servlet-mapping>

</web-app>

